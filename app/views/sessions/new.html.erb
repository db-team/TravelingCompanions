<% provide(:title, "Log in") %>

<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="card">
        <div class="card-header">
          <h4>Login</h4>
        </div>
        <div class="card-block">
          <%= form_for(:session, url: login_path) do |f| %>
            <div class="form-group">
              <%= f.label :email, 'Username or Email address', class: 'form-label' %>
              <%= f.text_field :email, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :password %>
              <%= link_to "(forgot password)", new_password_reset_path %>
              <%= f.password_field :password, class: 'form-control' %>
            </div>      
            <div class="form-check">
              <%= f.label :remember_me, class: "form-check-label" do %>
                <%= f.check_box :remember_me, class: "form-check-input" %>
                Remember me on this computer
              <% end %>  
            </div>
                  
            <%= f.submit "Log in", class: "btn btn-primary btn-lg btn-block", :style => "margin-bottom: 10px;" %>
          <% end %>
          <p>New user? <%= link_to "Sign up now!", signup_path, class: 'card-text' %></p>
        </div>
      </div>
    </div>
  </div>
</div>