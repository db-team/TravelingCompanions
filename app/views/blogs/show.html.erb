<div class="container">
	<h1>
		<%= @blog.title %>
	</h1>
	<% if @blog.author == current_user || current_user.admin? %>
		<% if @blog.published? %>
			<%= link_to 'Unpublish', { :controller => "blogs", :action => "unpublish"}, {:method => :post } %>
		<% else %>
			<%= link_to 'Publish', { :controller => "blogs", :action => "publish"}, {:method => :post } %>
		<% end %>
	<% end %>
	<span>
		by <%= @blog.author.name %>
	</span>
	<p>
		<%= @blog.extended_html_content.html_safe %>
	</p>
</div>