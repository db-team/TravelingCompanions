<% provide(:title, "New Awsome Blog") %>
<div class="container">
	<h1>New Awsome Blog</h1>
	
  <%= form_for(@blog) do |f| %>
  	<%= render 'shared/error_messages', object: f.object %>

  	<%= hidden_field_tag :author, current_user.id %>

  	<div class="form-group">
  		<%= f.label :title %>
	  	<%= f.text_field :title, class: 'form-control' %>
  	</div>
  	<div class="form-group">
  		<%= f.label :extended_html_content, 'What do you wanna share' %>
  		<%= f.bootsy_area :extended_html_content, class: 'form-control editor' %>
  	</div>
  	<div class="form-group">
  		<%= f.label :tag_list, "Tags (separated by commas)" %>
  		<%= f.text_field :tag_list, class: 'form-control' %>
  	</div>
  	
    <%= f.submit "Create Blog", class: "btn btn-primary" %>
  <% end %>		
</div>
