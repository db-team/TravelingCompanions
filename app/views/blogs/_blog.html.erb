<div class="card blog-index">
	<div class="card-header">
		<%= blog.title %>
		<div class="pull-xs-right">
			<%= time_ago_in_words(blog.created_at) %>
		</div>
	</div>
	<div class="card-block">
		<%= truncate(strip_tags(blog.extended_html_content), length: 300, :omission => "...") %>
		<%= link_to 'read more', blog %> 		
	</div>
	<div class="text-xs-right">
		Author: <%= link_to blog.author.name, user_path(blog.author_id) %>

	</div>
	<p>
		Tags: <%= raw blog.tag_list.map { |t| link_to t, tag_path(t)}.join(', ') %>
	</p>
</div>