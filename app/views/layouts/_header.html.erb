<nav class="navbar navbar-fixed-top navbar-dark bg-inverse">
		<a class="navbar-brand" href="<%= root_path %>">Travel Go!</a>
		<div class="nav navbar-nav">
			<ul class="nav navbar-nav">
				<% if current_user %>

				<li class="nav-item pull-xs-right">
					<%= link_to "Log out #{current_user.username} ", logout_path, id: "log_out", class: 'nav-link' %>
				</li>
				<% else %>
				<li class="nav-item">
					<%= link_to "Log In", new_session_path, class: 'nav-link' %>
				</li>
				<li class="nav-item">
					<%= link_to  "Sign Up", new_user_path, class: 'nav-link' %>
				</li>
				<% end %>
			</ul>
		</div>
	</nav>

	<% if flash[:success] %>
	<div class="alert alert-success" style="margin-top: 70px";><%= flash[:success] %></div>
	<% elsif flash[:error] %>
	<div class="alert alert-danger" style="margin-top: 70px";><%= flash[:error] %></div>
	<% end %>